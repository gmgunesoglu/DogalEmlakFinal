@model List<UserListModel>
@{
    ViewData["Title"] = "Staff";
}

<br />
<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<br />


<table>
    <tr>
        <th>Member Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Phone</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>@item.Password</td>
            <td>@item.Phone</td>
            <td>
                <div class="btn-group">
                    <form method="get" asp-action="Details" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-info">Details</button>
                    </form>

                    @if (item.Locked)
                    {
                        <form method="post" asp-action="UnBlock" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-success" style="margin-left: 10px;">Un Block</button>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-action="Block" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-warning" style="margin-left: 10px;">Block</button>
                        </form>
                    }
                </div>
            </td>
        </tr>
    }
</table>
<br />




