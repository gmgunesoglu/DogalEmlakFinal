@model UserLoginModel

@{
	ViewData["Title"] = "Login";
}

<div class="text-center">
	<h1 class="display-4">@ViewData["Title"]</h1>
</div>

<br />

@*nasıl ortalanacak?*@
<div class="row">
	<div class="col-4 mx-auto">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger small"></div>
			<div class="form-group d-grid">
				<br />
				<input asp-for=UserName class="form-control" placeholder="User Name: "></input>
				<span asp-validation-for="UserName" class="text-danger" small></span>
				<br />
				<input asp-for=Password type="password" class="form-control" placeholder="Password: "></input>
				<span asp-validation-for="Password" type="password" class="text-danger" small></span>
				<br />
				<button type="submit" class="btn green-btn">Login</button>
			</div>
		</form>
	</div>
</div>