@model UserRegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<br />

<div class="row">
    <div class="col-md-4 mx-auto">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-grid">
                <input asp-for="FirstName" class="form-control" placeholder="First Name: " />
                <span asp-validation-for="FirstName" class="text-danger"></span>
                <br />
                <input asp-for="LastName" class="form-control" placeholder="Last Name: " />
                <span asp-validation-for="LastName" class="text-danger"></span>
                <br />
                <input asp-for="UserName" class="form-control" placeholder="User Name: " />
                <span asp-validation-for="UserName" class="text-danger"></span>
                <br />
                <input asp-for="Password" type="password" class="form-control" placeholder="Password: " />
                <span asp-validation-for="Password" class="text-danger"></span>
                <br />
                <input asp-for="RePassword" type="password" class="form-control" placeholder="Password: " />
                <span asp-validation-for="RePassword" class="text-danger"></span>
                <br />
                <input asp-for="Email" class="form-control" placeholder="Email: " />
                <span asp-validation-for="Email" class="text-danger"></span>
                <br />
                <input asp-for="Phone" class="form-control" placeholder="Phone: " />
                <span asp-validation-for="Phone" class="text-danger"></span>
                <br/>
                <input type="submit" value="Register" class="btn green-btn" />
            </div>
        </form>
    </div>
</div>

<br />

